@using SalesLT.Repositories;
@model List<Customer>

<div class="row">
    <div class="col-lg-4">
        <h2>Customer</h2>

        <ul class="list-group">
            @foreach (var customer in Model)
            {
                <li class="list-group-item">@customer.FirstName @customer.LastName</li>
            }
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Add Customer", "Create", "Sales", new object { }, new { @class = "btn btn-primary" })
    </div>
</div>
